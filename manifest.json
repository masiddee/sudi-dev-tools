{
    "manifest_version": 2,
    
    "name": "Sudi PD Developer Tool",
    "description": "Perform various troubleshooting tasks useful to a Pardot Support Representative.",
    "version": "1.0",
    "devtools_page": "devtools.html",
    "incognito": "spanning",
    "icons": {"16": "icon16.png",
              "48": "icon48.png",
              "128": "icon128.png"},
    
    "background": {
        "scripts": ["js/jquery-2.2.0.min.js","js/event_page.js"],
        "persistent": false
    },
    
    "content_scripts": [
        {
            "matches": ["http://*/*","https://*/*"],
            "js": ["js/jquery-2.2.0.min.js","js/content_script.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    
    "permissions": [
        "activeTab",
        "cookies",
        "<all_urls>"
    ]
}